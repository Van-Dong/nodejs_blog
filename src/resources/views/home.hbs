<div class="mt-4 conatiner">
    <div class="row">
            {{#each courses}}
            <div class="card card-course-item col">
                <a href="courses/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="Card image">
                </a>
                <div class="card-body">
                    <a href="courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Detail information</a>
                </div>
            </div>
            {{/each}}
    </div>
</div>